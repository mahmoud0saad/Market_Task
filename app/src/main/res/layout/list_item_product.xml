<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/margin_2"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/product_image_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_product_image_size"
            android:scaleType="centerCrop"
            android:src="@drawable/slider_image2"/>
        <TextView
            android:id="@+id/name_product_text_view"
            android:layout_below="@+id/product_image_view"
            android:layout_width="wrap_content"
            android:textSize="@dimen/product_name_text_size"
            android:text="test"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/weight_product_text_view"
            android:layout_below="@+id/name_product_text_view"
            android:layout_width="wrap_content"
            android:textSize="@dimen/product_weight_text_size"
            android:text="test"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/price_product_text_view"
            android:layout_below="@+id/weight_product_text_view"
            android:layout_width="wrap_content"
            android:textSize="@dimen/product_price_text_size"
            android:text="test"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/add_product_image_button"
            android:layout_width="@dimen/width_image_button_product"
            android:layout_height="@dimen/width_image_button_product"
            android:layout_alignParentEnd="true"
            android:background="@drawable/circle_button_inactive_background"
            android:layout_margin="@dimen/margin_circle_button"
            android:layout_below="@+id/name_product_text_view"
            android:layout_alignParentRight="true" />




    </RelativeLayout>
</androidx.cardview.widget.CardView>